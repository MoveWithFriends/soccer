<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soccer_pitch"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/rowA_Layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/assist_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/a_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/a_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >
            <ImageView
                android:id="@+id/stijn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stijnicon"
                app:srcCompat="@mipmap/ic_launcher"

            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/a_3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >
            <ImageView
                android:id="@+id/nick_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nickicon"
                app:srcCompat="@mipmap/ic_launcher"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/a_4__layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

            <ImageView
                android:id="@+id/joost_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/joosticon"
                app:srcCompat="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/a_5_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

            <ImageView
                android:id="@+id/jurgen_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jurgenicon"
                app:srcCompat="@mipmap/ic_launcher"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/goal_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowB_Layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/assist_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            />

        <LinearLayout
            android:id="@+id/b_3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_4__layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_5_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowC_Layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/assist_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            />

        <LinearLayout
            android:id="@+id/c_3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_4__layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_5_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowD_Layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/score_we"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

            <TextView
                android:id="@+id/score_in_advance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doelpunt voor"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/d_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/d_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            />

        <LinearLayout
            android:id="@+id/d_3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/d_4__layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/d_5_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/score_oponent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

            <TextView
                android:id="@+id/score_against"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doelpunten tegen"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowE_Layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/timer_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/substitute_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/substitute_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            />

        <LinearLayout
            android:id="@+id/substitute_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/substitute_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/substitute_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/start_stop_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/customborder"
            >

            <Button
                android:id="@+id/start_game_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:onClick="startChronometer"
                />

            <Button
                android:id="@+id/pause_game_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pauze"
                android:onClick="pauseChronometer"
                />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
