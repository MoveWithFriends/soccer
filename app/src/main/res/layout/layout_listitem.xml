<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="15dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/list_image"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Testingtheview"
        android:textSize="17sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:id="@+id/playerFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerFirstName"
        android:text="Testingtheview"
        android:textSize="17sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:id="@+id/playerLastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_below="@id/playerLastName"
        android:text="Testingpleasehelpoke"
        android:layout_centerHorizontal="true"
        android:id="@+id/shirtNumber"/>

</RelativeLayout>