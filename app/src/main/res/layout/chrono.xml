    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:focusable="true"
    tools:shownIn="@menu/start"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
